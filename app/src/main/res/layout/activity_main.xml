<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hsky"
    tools:context="com.example.admin.tourguide_app.MainActivity">


    <Button
        android:id="@+id/btnRetrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve"
        android:alpha="0.35"
        android:onClick="btn_Click_Retrieve"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/imgView"
        android:layout_alignLeft="@+id/btnUpload"
        android:layout_alignStart="@+id/btnUpload"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/btnUpload"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.35"
        android:text="Upload"
        android:onClick="onClic_upload"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter image name"
        android:inputType="textPersonName"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/txt_descrip"
        android:layout_alignLeft="@+id/txt_descrip"
        android:layout_alignStart="@+id/txt_descrip" />

    <EditText
        android:id="@+id/txt_descrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter description"
        android:inputType="textPersonName"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/imgView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp" />


</RelativeLayout>
